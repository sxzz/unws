{
  "name": "unws",
  "version": "0.2.4",
  "packageManager": "pnpm@10.2.0",
  "description": "Unified WebSocket API for Node.js, Bun and modern browsers.",
  "type": "module",
  "license": "MIT",
  "homepage": "https://github.com/sxzz/unws#readme",
  "bugs": {
    "url": "https://github.com/sxzz/unws/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sxzz/unws.git"
  },
  "author": "三咲智子 Kevin Deng <sxzz@sxzz.moe>",
  "files": [
    "src"
  ],
  "main": "./src/node.js",
  "module": "./src/node.mjs",
  "types": "./src/index.d.ts",
  "exports": {
    ".": {
      "types": {
        "require": "./src/index.d.ts",
        "import": "./src/index.d.mts"
      },
      "browser": "./src/native.mjs",
      "bun": "./src/native.mjs",
      "require": "./src/node.js",
      "import": "./src/node.mjs"
    },
    "./package.json": "./package.json"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "pnpm run lint --fix",
    "release": "bumpp && pnpm publish"
  },
  "peerDependencies": {
    "ws": "*"
  },
  "devDependencies": {
    "@sxzz/eslint-config": "^5.0.1",
    "@sxzz/prettier-config": "^2.1.1",
    "bumpp": "^10.0.2",
    "eslint": "^9.19.0",
    "prettier": "^3.4.2",
    "typescript": "^5.7.3",
    "ws": "^8.18.0"
  },
  "engines": {
    "node": ">=16.14.0"
  },
  "prettier": "@sxzz/prettier-config"
}
